{
    "image": "ghcr.io/aristanetworks/avd/universal:python3.11-avd-v4.6.0-dev1",
    "postCreateCommand": "bash -c \"$(curl -sL https://get.containerlab.dev)\"; pip3 install --force file://$(pwd); echo 'eval \"$(register-python-argcomplete run)\"' >> ~/.zshrc; git config --global --add safe.directory /workspaces/eantc-automation",
    "customizations": {
        "vscode": {
            "extensions": [
                // git essentials
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                // spell checker
                "streetsidesoftware.code-spell-checker",
                // excalidraw, drawio and tldraw
                "hediet.vscode-drawio",
                "tldraw-org.tldraw-vscode",
                // markdown
                "yzhang.markdown-all-in-one",
                "bierner.markdown-checkbox",
                "DavidAnson.vscode-markdownlint",
                // various tools
                "tuxtina.json2yaml",
                "vscode-icons-team.vscode-icons",
                "mutantdino.resourcemonitor"
            ]
        }
    },
    // set nornir credentials
    "containerEnv": {
        "NORNIR_USER": "arista",
        // uncomment string below if password is defined as system env var
        // "NORNIR_PASSWORD": "${localEnv:NORNIR_PASSWORD}"
        "NORNIR_PASSWORD": "arista"
    }
}